<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%=content%></p>
<% arr.forEach(function(i){ %>
<h1><%= i.title %></h1>
<%if(i.content.length>100){%>
<p><%= i.content.substring(0,100) %>...<a href="/posts/<%= i.title %>">Read more</a></p>
<% } else { %>
<p><%= i.content %></p>
<% } %>
<% }); %>
<%- include("partials/footer"); -%>